<?xml version="1.0" ?>

<launch>

  <!-- Arguments -->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="use_dwa" default="true" />

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <!-- COSTMAP PARAMETERS -->
    <rosparam file="$(find cekal)/config/navigation/costmap_common_params.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find cekal)/config/navigation/costmap_common_params.yaml" command="load" ns="local_costmap"/>
    <rosparam file="$(find cekal)/config/navigation/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find cekal)/config/navigation/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find cekal)/config/navigation/move_base_params.yaml" command="load" />

    <!-- GLOBAL PLANNER PARAMETERS -->

    <!-- NavfnROS -->
    <!-- <param name="base_global_planner" value="navfn/NavfnROS" />
    <rosparam file="$(find cekal)/config/navigation/global_planner_params.yaml" command="load" />  -->

    <!-- Base Global PLanner -->
    <param name="base_global_planner" value="global_planner/GlobalPlanner" />
    <rosparam file="$(find cekal)/config/navigation/global_planner_params.yaml" command="load" /> 

    <!-- DWA LOCAL PLANNER PARAMETERS --> 
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" if="$(arg use_dwa)" />
    <rosparam file="$(find cekal)/config/navigation/dwa_local_planner_params_outdoor.yaml" command="load" if="$(arg use_dwa)" />

    <!-- TEB LOCAL PLANNER PARAMETERS -->
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" unless="$(arg use_dwa)" />
    <rosparam file="$(find cekal)/config/navigation/teb_local_planner_params.yaml" command="load" unless="$(arg use_dwa)"/>

    <!-- TRAJECTORY PLANNER PARAMETERS -->
<!--     <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS" unless="$(arg use_dwa)" />
    <rosparam file="$(find cekal)/config/navigation/trajectory_planner_params.yaml" command="load" unless="$(arg use_dwa)"/> -->

    <!-- TOPIC REMAPPING -->
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>

  </node>
  
</launch>